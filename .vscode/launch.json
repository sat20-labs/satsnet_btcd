    "version": "0.2.0",
    "configurations": [
        {
            "name": "satsnet_btcd",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "buildFlags": "-gcflags='all=-N -l'",
            "env": {
            },
            "console": "integratedTerminal",
            "program": "${workspaceFolder}",
            "args": [
                "--homedir",
                "./data",
                "--txindex"
            ]
        },
        {
            "name": "satsnet_btcd_client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "buildFlags": "-gcflags='all=-N -l'",
            "env": {
            },
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/cmd/btcd_client",
            "args": [
                "--homedir",
                "/home/satsnet/data"
            ]
        },
    ]
}